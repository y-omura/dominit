            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RandomizedActivity"
            android:label="@string/activity_title_randomized" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/activity_title_settings" >
            
        </activity>
        <activity
            android:name=".TwitterOAuthActivity"
            android:label="@string/activity_title_twitter_oauth" >
            
        </activity>
        <activity
            android:name=".TweetActivity"
            android:label="@string/activity_title_tweet" >
            
        </activity>
    </application>

</manifest>
